<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" styleClass="root" stylesheets="@../../../../style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.cinema_ticket_booking_system.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text styleClass="logo-text" text="CineApp" />
    <Label text="Sign in to your account" />

    <VBox alignment="CENTER" spacing="10.0" maxWidth="300">
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button fx:id="loginButton" onAction="#handleLoginButtonAction" text="Login" />
    </VBox>

    <Text text="Don't have an account?" />
    <Button fx:id="signUpButton" styleClass="link-button" text="Sign Up Now" />
</VBox>